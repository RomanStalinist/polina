<Window x:Class="polina.UpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400"
        Height="400"
        FontSize="16"
        Title="Регистрация"
        FontFamily="Open Sans"
        Background="#884cab"
        ResizeMode="CanMinimize"
        Foreground="WhiteSmoke"
        WindowStartupLocation="CenterScreen"
        Icon="/bin/Debug/net8.0-windows/img/wb.jpg">
    <StackPanel Margin="40,12">
        <TextBlock Text="Имя"/>
        <TextBox Foreground="#181615" x:Name="NameTextBox" Padding="7,4" Margin="0,2,0,10"/>
        <TextBlock Text="Телефон"/>
        <TextBox Foreground="#181615" x:Name="PhoneTextBox" Padding="7,4" Margin="0,2,0,10"/>
        <TextBlock Text="Пароль"/>
        <PasswordBox Foreground="#181615" x:Name="PasswordBox" Padding="7,4" Margin="0,2,0,10"/>
        <TextBlock Text="Еще раз"/>
        <PasswordBox Foreground="#181615" x:Name="RepeatPasswordBox" Padding="7,4" Margin="0,2,0,10"/>
        <Button Content="Регистрация" Margin="0,10" Padding="7,4" x:Name="RegisterButton" Click="registerButton_OnClick"/>
        <Button Content="Вход" Margin="0,10" Padding="7,4" x:Name="EnterButton" Click="enterButton_OnClick"/>
    </StackPanel>
</Window>
