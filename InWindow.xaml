<Window x:Class="polina.InWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400"
        Height="320"
        FontSize="16"
        Title="Авторизация"
        FontFamily="Open Sans"
        Background="#884cab"
        ResizeMode="CanMinimize"
        Foreground="WhiteSmoke"
        WindowStartupLocation="CenterScreen"
        Icon="/bin/Debug/net8.0-windows/img/wb.jpg">
    <StackPanel Margin="40,24">
        <TextBlock Text="Телефон"/>
        <TextBox Text="70000000000" Foreground="#181615" x:Name="TextBox" Padding="7,4" Margin="0,10"/>
        <TextBlock Text="Пароль"/>
        <PasswordBox Password="qwerty123" Foreground="#181615" x:Name="PasswordBox" Padding="7,4" Margin="0,10"/>
        <Button Content="Вход" Margin="0,5" Padding="7,4" x:Name="EnterButton" Click="enterButton_OnClick"/>
        <Button Content="Регистрация" Margin="0,10" Padding="7,4" x:Name="RegisterButton" Click="registerButton_OnClick"/>
    </StackPanel>
</Window>
